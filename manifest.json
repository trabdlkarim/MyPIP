{
  "name": "MyPIP - My Public IP address",
  "description": "MyPIP is a simple extension that lets you view your public IP address and related detailed information.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {           
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png",
      "512": "icons/icon512.png"
    },
    "default_title": "View my IP",
    "default_popup": "popup.html"   
  }
}